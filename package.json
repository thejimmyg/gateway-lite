{
  "name": "gateway-lite",
  "version": "0.2.14",
  "description": "An HTTP/HTTPS frontend express server for proxying to plain HTTP backends. Supports multiple domains, redirect, proxy paths, basic auth and automatic Lets Encrypt certificates",
  "scripts": {
    "docker:build:jimmyg": "docker build . -t docker.jimmyg.org/gateway-lite:0.2.13",
    "docker:push:jimmyg": "docker push docker.jimmyg.org/gateway-lite:0.2.13",
    "docker:build:jimmyg:test": "docker build . -t docker.jimmyg.org/gateway-lite:test",
    "docker:push:jimmyg:test": "docker push docker.jimmyg.org/gateway-lite:test",
    "docker:build": "docker build . -t thejimmyg/gateway-lite:0.2.13",
    "docker:push": "docker push thejimmyg/gateway-lite:0.2.13",
    "docker:build:test": "docker build . -t thejimmyg/gateway-lite:test",
    "docker:push:test": "docker push thejimmyg/gateway-lite:test",
    "docker:run": "mkdir -p domain; mkdir -p letsencrypt; docker run -e DEBUG=gateway-lite -v \"`pwd`/letsencrypt:/etc/letsencrypt:rw\" -v \"`pwd`/domain:/app/domain\" --init -p 8000:8000 -p 3000:3000 thejimmyg/gateway-lite:0.2.13 --https-port 3000 --port 8000 --cert domain/www.example.com/sni/cert.pem --key domain/www.example.com/sni/key.pem --domain domain --staging",
    "docker:run:local": "docker-compose stop && docker-compose pull && docker-compose up --build -d",
    "docker:stop:local": "docker-compose stop",
    "docker:logs:local": "docker-compose logs --tail='all' -f",
    "fix": "standard --fix",
    "start": "node bin/gateway-lite.js",
    "downstream": "cd downstream && npm start"
  },
  "bin": {
    "gateway-lite": "bin/gateway-lite.js"
  },
  "standard": {
    "globals": [
      "fetch",
      "Headers",
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:thejimmyg/gateway-lite.git"
  },
  "author": "James Gardner",
  "license": "MIT",
  "devDependencies": {
    "nodemailer": "^4.7.0",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "credential": "^2.0.0",
    "dashdash": "^1.14.1",
    "debug": "^4.1.0",
    "express": "^4.15.2",
    "express-basic-auth": "^1.1.6",
    "express-http-proxy": "^1.5.0",
    "express-mustache-jwt-signin": "^0.3.3",
    "express-mustache-overlays": "^0.4.0",
    "http-proxy-middleware": "^0.19.1",
    "js-yaml": "^3.12.0",
    "node-schedule": "^1.3.1",
    "pjax-pwa-overlay": "^0.2.2",
    "shelljs": "^0.8.3",
    "vhost": "^3.0.2"
  }
}
